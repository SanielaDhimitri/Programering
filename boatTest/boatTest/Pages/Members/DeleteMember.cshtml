@page "{id:int}"
@model boatTest.Pages.Members.DeleteMemberModel
@{
}


@{
    ViewData["Title"] = "Delete Member";
}

<h1>Delete Member</h1>

@if (Model.Member == null)
{
    <div class="alert alert-warning">Member not found.</div>
}
else
{
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4>Are you sure you want to delete this Member?</h4>

            <dl class="row">
                @*    row do të thotë: një rresht horizontal që mban kolona brenda tij *@
                <dt class="col-sm-2">Id</dt>                                            @* deskription list,term,definitin *@
                <dd class="col-sm-10">@Model.Member.Id</dd>

                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Member.Name</dd>

                <dt class="col-sm-2">Adresse</dt>
                <dd class="col-sm-10">@Model.Member.Adresse</dd>

                <dt class="col-sm-2">Phone</dt>
                <dd class="col-sm-10">@Model.Member.Phone</dd>

                <dt class="col-sm-2">Age</dt>
                <dd class="col-sm-10">@Model.Member.Age</dd>
            </dl>

            <form method="post" asp-route-id="@Model.Member.Id">

                <div class="row mt-3">
                    <div class="col-12 col-sm-6 mb-2">
                        <button type="submit" class="btn btn-success w-100">Delete</button>
                    </div>
                    <div class="col-12 col-sm-6 mb-2">
                        <a asp-page="/Members/GetAllMembers"
                           class="btn btn-primary w-100">
                            Back to List
                        </a>
                    </div>
                </div>

            </form>

        </div>

    </div>

}

