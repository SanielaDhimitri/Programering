@page "/{id:int}"
@model boatTest.Pages.Members.EditMemberModel
@{
}

@{
    ViewData["Title"] = "EditMember";
}
<h1>EditMember</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Member.Id" />
            <div class="form-group">
                <label asp-for="Member.Name" class="control-lable"></label>
                <input asp-for="Member.Name" class="form-control bg-light" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
              
            </div>
            <div class="form-group">
                <label asp-for="Member.Adresse" class="control-lable"></label>
                <input asp-for="Member.Adresse" class="form-control bg-light" />
                <span asp-validation-for="Member.Adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Phone" class="control-lable"></label>
                <input asp-for="Member.Phone" class="form-control bg-light" />
               <span asp-validation-for="Member.Phone"class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Age" class="control-lable"></label>
                <input asp-for="Member.Age" class="form-control bg-light" />
                <span asp-validation-for="Member.Age" class="text-danger"> </span>
            </div>
            <div class="row mt-3">
                <div class="col-12 col-sm-6 mb-2">
            <button type="submit" class="btn btn-success w-100  ">Save  </button>
            </div>
                <div class="col-12 col-sm-6 mb-2">
            <a asp-page="/Members/GetAllMembers" 
            class="btn btn-primary w-100">
            Back to List</a>

                </div>
                </div>
        </form>
    </div>
</div>

