@page
@model boatTest.Pages.Members.GetAllMembersModel
@using boatTest.Models

@{
}



<h1>GetAllMembers</h1>

<table class="table table-striped w-100">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Adresse</th>
            <th>Phone</th>
            <th>Age</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
            @if (Model._members != null)
        {
        @foreach (Member mm in Model._members)
        {
            <tr>
                <td>@mm.Id</td>
                <td>@mm.Name</td>
                <td>@mm.Adresse</td>
                <td>@mm.Phone</td>
                <td>@mm.Age</td>
                
                <td class="actions">
                    <div class="d-flex gap-2">
                        <a asp-page="/Members/EditMember"
                           asp-route-id="@mm.Id"
                           class="btn btn-warning w-100">
                            Edit
                        </a>

                        <a asp-page="/Members/DeleteMember"
                           asp-route-id="@mm.Id"
                           class="btn btn-danger w-100">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        }
    </tbody>
</table>

<div class="row mt-3">
    <div class="col-12 col-sm-6 mb-2">
        <a asp-page="/Members/CreateMembers"
           class="btn btn-primary w-100">
            Create New Member
        </a>
    </div>

</div>


<form method="post" class="form-inline">
    <input asp-for="SearchString " class="form-control mr-1" placeholder="Enter search term"/>
    <button type="submit" asp-page-handler="SearchMember"value=" search" class="btn btn-primary mt-2">Search</button>
</form>

<form method="post" class="form-inline">
    <div class="input-group my-3">
        <div class="input-group-prepend">                 @* //input-group-prepend → përdoret për të shtuar një element para *@
            <span class="input-group-text">Min</span>
        </div>
        <input asp-for="MinAge" class="form-control mr-1" />

        <div class="input-group-prepend">
            <span class="input-group-text">Max</span>

        </div>
        <input asp-for="MaxAge" class="form-control mr-1" />

        <button type="submit" asp-page-handler="SearchByAge" value="Search" class="btn btn-primary">SearchByAge</button>  @* // PriceFilter(ndodhet ne IItemService) eshte metoda qe ben filtrimin e itemeve ne baze te cmimit, dhe kerkohet te kete dy parametra, nje per cmimin maksimal dhe nje per cmimin minimal (opsional)) *@
    </div>
</form>