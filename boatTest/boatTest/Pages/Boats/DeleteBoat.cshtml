@page "{id:int}"
@model boatTest.Pages.Boats.DeleteBoatModel

@{
    ViewData["Title"] = "Delete Boat";
}

<h1>Delete Boat</h1>

@if (Model.Boat == null)
{
    <div class="alert alert-warning">Boat not found.</div>
}
else
{
   <div class="card shadow-sm mt-4">
        <div class="card-body">
        <h4>Are you sure you want to delete this boat?</h4>

        <dl class="row">                                              @*    row do të thotë: një rresht horizontal që mban kolona brenda tij *@
            <dt class="col-sm-2">Id</dt>                                            @* deskription list,term,definitin *@
            <dd class="col-sm-10">@Model.Boat.BoatId</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Boat.Name</dd>

            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@Model.Boat.Type</dd>

            <dt class="col-sm-2">Year</dt>
            <dd class="col-sm-10">@Model.Boat.Year</dd>
        </dl>

            <form method="post" asp-route-id="@Model.Boat.BoatId">    @*   //dërgon të dhëna=on post=dërgon të dhëna=veprime që ndryshojnë databazën *@
         
<div class="row mt-3">
    <div class="col-12 col-sm-6 mb-2">
        <button type="submit" class="btn btn-danger w-100">Delete</button>
    </div>
    <div class="col-12 col-sm-6 mb-2"> <a asp-page="/Boats/GetAllBoats" class="btn btn-primary w-100"> Back to List  </a>
           </div>
            </div>
               
        </form>

        </div>
   
    </div>
    
    }